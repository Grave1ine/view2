            android:id="@+id/textView_total_tax_price"
            style="@style/Primary.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/textView_total_tax_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_total_shipping_price" />

        <Button
            style="@style/Widget.Material3.Button.Icon"
            android:id="@+id/button_pay"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/button_pay"
            android:textSize="20sp"
            app:backgroundTint="?attr/buttonPay"
            app:icon="@drawable/baseline_payments_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
